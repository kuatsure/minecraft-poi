{{title 'New POI'}}

<form {{action "submitNewPoi" on="submit"}}>
  {{paper-input label="Name" required=true value=model.name}}

  <div layout="row">
    <div flex>{{paper-input label="X Coordinate" type="number" required=true value=model.xCoord}}</div>

    <div flex>{{paper-input label="Y Coordinate" type="number" required=true value=model.yCoord}}</div>

    <div flex>{{paper-input label="Z Coordinate" type="number" required=true value=model.zCoord}}</div>
  </div>

  <div style="display: flex; flex-direction: row; align-items: center;">
    <span class="u-flex"></span>

    {{#paper-button raised=true action="cancelNewPoi"}}
      {{paper-icon "cancel"}}

      Cancel
    {{/paper-button}}

    {{#paper-button raised=true primary=true type="submit"}}
      {{paper-icon "save"}}

      Save New POI
    {{/paper-button}}
  </div>
</form>

{{outlet}}

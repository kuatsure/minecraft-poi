{{title 'Worlds'}}

<h2 style="display: flex; flex-direction: row; align-items: center;">
  Worlds

  <span class="u-flex"></span>

  {{#link-to "worlds.new" tagName="button" classNames="md-default-theme md-button"}}
    <span disabled="false">
      {{paper-icon "add-box"}}

      Add a World
    </span>
  {{/link-to}}
</h2>

{{#paper-content class="md-whiteframe-z2"}}
  {{#paper-list}}
    {{#each model as |world_item|}}
      {{#paper-item class="md-3-line"}}
        <div class="md-list-item-text">
          {{#link-to 'world' world_item tagName="h3"}}
            {{world_item.name}}
          {{/link-to}}
        </div>
      {{/paper-item}}

      {{paper-divider}}

    {{else}}
      {{#paper-item}}
        No worlds! :(
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
{{/paper-content}}

{{outlet}}
